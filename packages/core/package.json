{
  "name": "@md2pptx/core",
  "version": "0.1.0",
  "description": "Core converter library for Markdown to PowerPoint",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./templates": "./templates/*.json"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "powerpoint",
    "pptx",
    "converter",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pptxgenjs": "^3.12.0",
    "marked": "^12.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
